{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false, //will change
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"@/components": ["./app/components/"],
			"@/styles/*": ["./app/styles/*"],
			"@/redux/*": ["./lib/redux/*"]
		}
	},
	"include": [
		"ConduitAPI.d.ts",
		"next-env.d.ts",
		"globals.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"../build/types/**/*.ts",
		"dist/types/**/*.ts",
		"build/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
