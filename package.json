{
	"name": "wyvern-client",
	"productName": "Wyvern Client",
	"description": "A discord botclient built with Electron, Next and discord.js.",
	"version": "0.11.0",
	"author": {
		"name": "DarkGuy10",
		"email": "HarperBurn@protonmail.ch",
		"url": "https://github.com/darkguy10"
	},
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/darkGuy10/BotClient.git"
	},
	"main": "backend/build/main.js",
	"packageManager": "yarn@3.6.1",
	"scripts": {
		"frontend:dev": "next dev frontend",
		"frontend:build": "next build frontend",
		"frontend:lint": "next lint frontend",
		"backend:build": "tsc -p backend && tsc-alias -p ./backend/tsconfig.json",
		"backend:lint": "eslint backend",
		"lint": "prettier -c . && yarn backend:lint && yarn frontend:lint",
		"lint:fix": "prettier -w .",
		"boot": "yarn backend:build && electron .",
		"start": "concurrently -k \"yarn frontend:dev\" \"wait-on tcp:127.0.0.1:3000 && yarn boot\"",
		"pre-build": "yarn frontend:build && yarn backend:build",
		"build": "yarn pre-build && electron-builder",
		"postinstall": "electron-builder install-app-deps",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"dependencies": {
		"@darkguy10/discord-markdown": "^2.6.0",
		"@skyra/discord-components-core": "^3.3.0",
		"@skyra/discord-components-react": "^3.3.0",
		"discord.js": "^14.11.0",
		"electron-is-dev": "^2.0.0",
		"electron-log": "^4.4.8",
		"electron-store": "^8.1.0",
		"electron-updater": "^5.3.0",
		"html-to-react": "^1.4.8",
		"markdown-to-jsx": "^7.1.7",
		"next": "^13.4.12",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-twemoji": "^0.5.0"
	},
	"devDependencies": {
		"@storybook/addon-essentials": "7.5.3",
		"@storybook/addon-interactions": "7.5.3",
		"@storybook/addon-links": "7.5.3",
		"@storybook/blocks": "7.5.3",
		"@storybook/nextjs": "7.5.3",
		"@storybook/react": "7.5.3",
		"@storybook/testing-library": "0.2.2",
		"@types/node": "20.2.5",
		"@types/react": "18.2.8",
		"@types/react-dom": "18.2.4",
		"@typescript-eslint/eslint-plugin": "^5.59.9",
		"@typescript-eslint/parser": "^5.59.9",
		"concurrently": "^8.1.0",
		"electron": "^25.0.1",
		"electron-builder": "^23.6.0",
		"electron-debug": "^3.2.0",
		"eslint": "^8.42.0",
		"eslint-config-next": "^13.4.12",
		"eslint-plugin-storybook": "^0.6.15",
		"prettier": "^3.0.0",
		"sass": "^1.64.0",
		"storybook": "7.5.3",
		"tsc-alias": "^1.8.7",
		"typescript": "^5.1.3",
		"wait-on": "^7.0.1"
	}
}
